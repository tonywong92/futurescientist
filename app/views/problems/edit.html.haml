= render :partial => '/layouts/header'
%br
  .span8.offset1
    .well
      .container
        .span8
          %h3 Edit Existing Problem

          = form_tag problem_path(@problem), :method => :put  do

            = label :user, :name, 'Name'
            = text_field :user, :name

            = label :problem, :location, 'Location'
            = text_field :problem, :location

            = label :problem, :skills, 'Skills Required'
            = select_tag('skills', options_from_collection_for_select(@all_skills, 'skill_name', 'skill_name', {:selected => [@curr_skills]}))

            = label :problem, :wage, 'Wage'
            = text_field :problem, :wage

            = label :problem, :summary, 'Problem Summary'
            = text_field :problem, :summary

            = label :problem, :description, 'Description'
            = text_area :problem, :description
            %br
            = submit_tag 'Update Problem'
